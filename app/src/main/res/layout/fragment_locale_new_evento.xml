<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nomeEvento"
                android:layout_width="145dp"
                android:gravity="end"
                android:layout_height="match_parent"
                android:text="@string/nome"
                android:textColor="#FFFFFF"
                android:textSize="25sp"/>

            <EditText
                android:id="@+id/editNomeEvento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lila"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textSize="20sp"
                tools:ignore="LabelFor,MissingConstraints" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/descrizioneEvento"
                android:layout_width="145dp"
                android:gravity="end"
                android:layout_height="match_parent"
                android:text="@string/descrizione"
                android:textColor="#FFFFFF"
                tools:ignore="MissingConstraints"
                android:textSize="25sp"/>

            <EditText
                android:id="@+id/editDescrizioneEvento"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/lila"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:textSize="17sp"
                android:textAlignment="textStart"
                tools:ignore="LabelFor,MissingConstraints" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tipoEvento"
                android:layout_width="145dp"
                android:gravity="end"
                android:layout_height="match_parent"
                android:text="@string/tipo"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                tools:ignore="MissingConstraints,NotSibling"
                />

            <Spinner
                android:id="@+id/spinnerTipoEvento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lila"
                android:gravity="start"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/luogoEvento"
                android:layout_width="145dp"
                android:gravity="end"
                android:layout_height="match_parent"
                android:text="@string/luogo"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/coordinateEvento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:background="@color/white"
                android:textSize="20sp"
                android:hint="seleziona LUOGO"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dataEvento"
                android:layout_width="145dp"
                android:gravity="end"
                android:layout_height="match_parent"
                android:text="@string/data"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                tools:ignore="MissingConstraints"
                />


            <EditText
                android:id="@+id/etData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lila"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textSize="20sp"
                tools:ignore="LabelFor,MissingConstraints"
                android:focusable="false"
                android:clickable="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etOraInizio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"
                android:clickable="true"
                android:textSize="20sp"
                android:background="@color/lila"
                android:hint="ORA inizio"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"/>

            <EditText
                android:id="@+id/etOraFine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"
                android:clickable="true"
                android:textSize="20sp"
                android:background="@color/lila"
                android:hint="ORA fine"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nomeLocaleEvento"
                android:layout_width="145dp"
                android:gravity="end"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                tools:ignore="MissingConstraints"
                android:hint="nome locale"
                />

            <TextView
                android:id="@+id/numeroTelefonoEvento"
                android:layout_width="145dp"
                android:gravity="end"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                tools:ignore="MissingConstraints"
                android:hint="numero telefono"
                />

            <TextView
                android:id="@+id/geolocalizzazioneEvento"
                android:layout_width="145dp"
                android:gravity="end"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                tools:ignore="MissingConstraints"
                android:hint="numero telefono"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/prezzoEvento"
                android:layout_width="145dp"
                android:gravity="end"
                android:layout_height="match_parent"
                android:text="@string/prezzo"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                tools:ignore="MissingConstraints"
                />

            <EditText
                android:id="@+id/editPrezzoEvento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lila"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                tools:ignore="LabelFor,MissingConstraints"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">

            <Button
                android:id="@+id/buttonAnnullaEvento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:text="SVUOTA TUTTO"
                android:textSize="15sp"
                tools:ignore="ButtonStyle,MissingConstraints"
                app:cornerRadius="10dp"/>

            <Button
                android:id="@+id/buttonAggiungiEvento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="AGGIUNGI"
                tools:ignore="ButtonStyle,MissingConstraints"
                app:cornerRadius="10dp"/>

        </LinearLayout>




    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>