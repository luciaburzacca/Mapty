<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    >


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="150dp">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/nomeEvento"
                android:layout_width="145dp"
                android:gravity="right"
                android:layout_height="35dp"
                android:layout_marginBottom="15dp"
                android:text="@string/nome"
                android:textColor="#FFFFFF"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/descrizioneEvento"
                android:layout_width="145dp"
                android:gravity="right"
                android:layout_height="35dp"
                android:layout_marginBottom="80dp"
                android:text="@string/descrizione"
                android:textColor="#FFFFFF"
                tools:ignore="MissingConstraints"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/tipoEvento"
                android:layout_width="145dp"
                android:gravity="right"
                android:layout_height="35dp"
                android:layout_marginEnd="212dp"
                android:layout_marginBottom="15dp"
                android:text="@string/tipo"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                tools:ignore="MissingConstraints,NotSibling"
                 />

            <TextView
                android:id="@+id/luogoEvento"
                android:layout_width="145dp"
                android:gravity="right"
                android:layout_height="35dp"
                android:layout_marginBottom="15dp"
                android:text="@string/luogo"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/dataEvento"
                android:layout_width="145dp"
                android:gravity="right"
                android:layout_height="35dp"
                android:layout_marginBottom="15dp"
                android:text="@string/data"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                tools:ignore="MissingConstraints"
                />

            <TextView
                android:id="@+id/prezzoEvento"
                android:layout_width="145dp"
                android:gravity="right"
                android:layout_height="35dp"
                android:layout_marginBottom="15dp"
                android:text="@string/prezzo"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                tools:ignore="MissingConstraints"
                />

            <TextView
                android:id="@+id/contattoEvento"
                android:layout_width="145dp"
                android:gravity="right"
                android:layout_height="35dp"
                android:text="@string/contatto"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                tools:ignore="MissingConstraints"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editNomeEvento"
                android:layout_width="217dp"
                android:layout_height="35dp"
                android:layout_marginBottom="15dp"
                android:background="@color/lila"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textSize="20sp"
                tools:ignore="LabelFor,MissingConstraints" />

            <EditText
                android:id="@+id/editdescrizioneEvento"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="15dp"
                android:background="@color/lila"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:textSize="20sp"
                tools:ignore="LabelFor,MissingConstraints" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="35dp"

                android:layout_marginBottom="15dp"
                android:hint="@string/SELEZIONA"
                tools:ignore="MissingConstraints">

                <AutoCompleteTextView
                    android:id="@+id/lista_item_locale"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/lila"
                    android:inputType="none"
                    android:textSize="20sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <EditText
                android:id="@+id/editdataEvento"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="15dp"
                android:background="@color/lila"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="date"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                tools:ignore="LabelFor,MissingConstraints"
                />

            <EditText
                android:id="@+id/editprezzoEvento"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/lila"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                tools:ignore="LabelFor,MissingConstraints"
                android:layout_marginBottom="15dp"
                />

            <EditText
                android:id="@+id/editcontattoEvento"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/lila"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="phone"
                android:textSize="20sp"
                tools:ignore="LabelFor,MissingConstraints" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/aggiungeEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aggiunge_evento"
            tools:ignore="MissingConstraints"
            android:layout_marginBottom="15dp"/>

        <Button
            android:id="@+id/annullaEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANNULLA"
            tools:ignore="MissingConstraints"
            android:textSize="15dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>