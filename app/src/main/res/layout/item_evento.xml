<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/evento_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome Evento"
            android:textColor="@color/lila"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/evento_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tipo evento"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/evento_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="(data e ora)"
            android:textColor="@color/white"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/evento_locale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nome locale"
            android:textColor="@color/lila"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white" />
    </LinearLayout>


</FrameLayout>




