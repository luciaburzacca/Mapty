<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrazioneFragment"
    android:background="@color/black"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBoxUtente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UTENTE"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="15sp"/>

            <CheckBox
                android:id="@+id/checkBoxLocale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOCALE"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginEnd="30dp"/>

        </LinearLayout>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="@string/email"
        android:layout_gravity="left"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:textSize="25sp" />

        <EditText
            android:id="@+id/registrazioneEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_marginTop="10sp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginTop="10sp"
            />

        <EditText
            android:id="@+id/registrazionePass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_marginTop="10sp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="REGISTRATI" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/buttonGoogleSignInReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/buttonTornaLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="15dp"
            android:text="TORNA A LOGIN" />
    </LinearLayout>

</FrameLayout>