<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UtenteFiltroEventiFragment"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        tools:ignore="UselessParent">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view_filtro"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:layout_marginTop="30sp"
            android:background="@color/white"
            android:gravity="center"
            android:queryHint="Cerca evento o locale" />

        <ListView
            android:id="@+id/suggestions_list_view"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="15dp">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/imageButtonAll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:importantForAccessibility="no"
                    android:scaleType="centerInside"
                    android:src="@drawable/all" />

                <ImageButton
                    android:id="@+id/imageButtonBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:importantForAccessibility="no"
                    android:scaleType="centerInside"
                    android:src="@drawable/bar" />

                <ImageButton
                    android:id="@+id/imageButtonBeach"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:importantForAccessibility="no"
                    android:scaleType="centerInside"
                    android:src="@drawable/beach" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="15dp">

                <ImageButton
                    android:id="@+id/imageButtonDisco"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:importantForAccessibility="no"
                    android:scaleType="centerInside"
                    android:src="@drawable/disco"
                    />

                <ImageButton
                    android:id="@+id/imageButtonFilm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:importantForAccessibility="no"
                    android:scaleType="centerInside"
                    android:src="@drawable/film" />

                <ImageButton
                    android:id="@+id/imageButtonKaraoke"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:importantForAccessibility="no"
                    android:scaleType="centerInside"
                    android:src="@drawable/karaoke" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                >

                <ImageButton
                    android:id="@+id/imageButtonLive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:importantForAccessibility="no"
                    android:scaleType="centerInside"
                    android:src="@drawable/live" />

                <ImageButton
                    android:id="@+id/imageButtonLocal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:importantForAccessibility="no"
                    android:scaleType="centerInside"
                    android:src="@drawable/local" />

                <ImageButton
                    android:id="@+id/imageButtonReggaeton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:importantForAccessibility="no"
                    android:scaleType="centerInside"
                    android:src="@drawable/reggaeton" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="15dp">

                <ImageButton
                    android:id="@+id/imageButtonSlay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:importantForAccessibility="no"
                    android:scaleType="centerInside"
                    android:src="@drawable/slay" />

                <ImageButton
                    android:id="@+id/imageButtonTechno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:importantForAccessibility="no"
                    android:scaleType="centerInside"
                    android:src="@drawable/techno" />

                <ImageButton
                    android:id="@+id/imageButtonThematic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:importantForAccessibility="no"
                    android:scaleType="centerInside"
                    android:src="@drawable/thematic" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/buttonTornaHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TORNA A HOME"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>

    </LinearLayout>

</FrameLayout>